# Convert images and pad intead of stretching the image
new_name="train_256_padded"

cp -R train/ $new_name # Quick and dirty way to copy folders structure
for d in $new_name/*; do
    echo "Working on... $d"
    for name in $d/*.jpg; do
        convert -gravity center -extent 256x256 $name $name
    done
done

